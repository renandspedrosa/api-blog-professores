{
  "name": "api-blog",
  "version": "1.0.0",
  "description": "API para blog dos professores",
  "main": "index.js",
  "scripts": {
    "start:dev": "tsx watch src/server.ts",
    "start": "node public/server.js",
    "build": "tsup src --out-dir public && npx typeorm migration:run -d ./build/lib/typeorm/typeorm.js",
    "migrate": "npm run build && npx typeorm migration:run -d ./build/lib/typeorm/typeorm.js",
    "migrate:prod": "npx typeorm migration:run -d ./build/lib/typeorm/typeorm.js",
    "lint": "npx eslint src/** --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose --preset ts-jest",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --preset ts-jest",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --preset ts-jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/src/tests/**/*.(spec|test).[tj]s?(x)"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@types/bcryptjs": "2.4.6",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.13",
    "@types/multer": "1.4.12",
    "@types/node": "20.12.7",
    "@types/nodemailer": "6.4.17",
    "@types/pg": "8.11.5",
    "@types/supertest": "6.0.2",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-promise": "6.1.1",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "tsup": "8.0.2",
    "tsx": "4.7.2",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@fastify/jwt": "8.0.0",
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "crypto": "1.0.1",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-jwt": "8.4.1",
    "multer": "1.4.5-lts.1",
    "node-fetch": "3.3.2",
    "nodemailer": "6.9.16",
    "pg": "8.11.5",
    "reflect-metadata": "0.2.2",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "typeorm": "0.3.20",
    "zod": "3.23.3"
  }
}
